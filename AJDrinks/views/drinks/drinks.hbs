<div class="px-5">
  <h1 class="px-5 my-5">{{category}}</h1>
  {{#each drinks}}
    <div class="card mb-3 bg-danger bg-gradient my-5" style="max-width: 540px;">
      <div class="row g-0">
        <div class="col-md-4">
          <img src="/images/Wines/celeste.png" class="bd-placeholder-img card-img-top" width="100%" height="225" alt="..." />
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><h2>{{this.name}}</h2></h5>
            <p class="card-text">{{this.description}}</p>
            <p class="card-text">Rating: {{this.rating}}</p>
            <p class="card-text">Company: {{this.brewer}}</p>
            <p class="card-text"><small class="text-muted"><a href="{{this._id}}/drink-details">More Details</a></small></p>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>