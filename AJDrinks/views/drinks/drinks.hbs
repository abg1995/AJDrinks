<div class="px-5">
{{#each drinks}}
 <h1 class="px-5">{{this.category}}</h1>
<div class="card mb-3 bg-danger bg-gradient " style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="/images/Wines/celeste.png" class="" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><h2>{{this.name}}</h2></h5>
        <p class="card-text">{{this.description}}</p>
        <p class="card-text">Rating: {{this.rating}}</p>
        <p class="card-text">Company: {{this.brewer}}</p>
        <p class="card-text"><small class="text-muted"><a href="">More Details</a></small></p>
      </div>
    </div>
  </div>
</div>
{{/each}}
</div>

