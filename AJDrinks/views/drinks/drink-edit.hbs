<div class="mx-auto mt-5" style="width: 400px;">
  <h1>Edit {{drinks.name}}</h1>
</div>
<br> <br> 
<form class="ps-5" action="/drinks/{{drinks._id}}/edit" method="POST">
  <div class="row mb-3">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Name</label>
    <div class="col-sm-5">
      <input type="text-area" class="form-control" id="inputEmail3" name="name" value="{{drinks.name}}"/>
    </div>
  </div>

  <div class="row mb-3">
    <label class="col-sm-2 col-form-label">Description</label>
    <div class="col-sm-5">
      <textarea type="text-area" class="form-control" id="inputPassword3" name="description"> {{drinks.description}}</textarea>
    </div>
  </div>

  <div class="row mb-3">
    <label class="col-sm-2 col-form-label">Rating</label>
    <div class="col-sm-5">
      <input type="number" class="form-control" id="inputPassword3" name="rating" value="{{drinks.rating}}"/>
    </div>
  </div>

  <div class="row mb-3">
    <label class="col-sm-2 col-form-label">Brewer/Company</label>
    <div class="col-sm-5">
      <input type="text-area" class="form-control" id="inputPassword3" name="brewer" value="{{drinks.brewer}}"/>
    </div>
  </div>


  <fieldset class="row mb-3">
    <legend class="col-form-label col-sm-2 pt-0">Category</legend>
    <div class="col-sm-5">
      <div class="form-check">
        <input
          class="form-check-input"
          type="radio"
          name="category"
          id="gridRadios1"
          value="WHISKEY"
          checked
        />
        <label class="form-check-label" for="gridRadios1">
          Whiskey
        </label>
      </div>
      <div class="form-check">
        <input
          class="form-check-input"
          type="radio"
          name="category"
          id="gridRadios2"
          value="WINE"
        />
        <label class="form-check-label" for="gridRadios2">
          Wine
        </label>
      </div>
      <div class="form-check">
        <input
          class="form-check-input"
          type="radio"
          name="category"
          id="gridRadios2"
          value="BEER"
        />
        <label class="form-check-label" for="gridRadios2">
          Beer
        </label>
      </div>
      <div class="form-check">
        <input
          class="form-check-input"
          type="radio"
          name="category"
          id="gridRadios2"
          value="VODKA"
        />
        <label class="form-check-label" for="gridRadios2">
          Vodka
        </label>
      </div>
            <div class="form-check">
        <input
          class="form-check-input"
          type="radio"
          name="category"
          id="gridRadios2"
          value="TEQUILA"
        />
        <label class="form-check-label" for="gridRadios2">
          Tequila
        </label>
      </div>
            <div class="form-check">
        <input
          class="form-check-input"
          type="radio"
          name="category"
          id="gridRadios2"
          value="RUM"
        />
        <label class="form-check-label" for="gridRadios2">
          Rum
        </label>
      </div>
            <div class="form-check">
        <input
          class="form-check-input"
          type="radio"
          name="category"
          id="gridRadios2"
          value="COGNAC"
        />
        <label class="form-check-label" for="gridRadios2">
          Cognac
        </label>
      </div>
            <div class="form-check">
        <input
          class="form-check-input"
          type="radio"
          name="category"
          id="gridRadios2"
          value="SAKE"
        />
        <label class="form-check-label" for="gridRadios2">
          Sake
        </label>
      </div>
      </div>
    </div>
  </fieldset>
 
  <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

